{% extends 'base.html.twig' %}

{% block title %}{{heading}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Вы открыли детальную страницу! ✅</h1>
    <ul>
        <li>ID элемента - {{ article.id }}</li>
        <li>Название элемента - {{ article.title }}</li>
        <li>Текст - {{ article.text }}</li>
        <li>Изображение - {{ article.image }}</li>
        <li>Дата создания - {{ article.createdAt.format('d/m/Y') }}</li>
    </ul>
    <div class="link-back">
        <a href="/">Вернуться назад</a>
    </div>
    <div class="article-comments">
        <h3>Комментарии</h3>

        {{ form(form) }}

        {% if comments %}
            <ul>
                {% for comment in comments %}
                    <li>
                        {{ comment.title }}<br>
                        {{ comment.text }}
                        {{ comment }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>
{% endblock %}
